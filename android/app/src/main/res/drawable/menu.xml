<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item android:height="3dp" android:top="5dp">
                <shape>
                    <solid android:color="@color/light_gray" />
                </shape>
            </item>
            <item android:height="3dp" android:gravity="center_vertical">
                <shape>
                    <solid android:color="@color/light_gray" />
                </shape>
            </item>

            <item android:height="3dp" android:bottom="5dp" android:gravity="bottom">
                <shape>
                    <solid android:color="@color/light_gray" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item android:height="3dp" android:top="5dp">
                <shape>
                    <solid android:color="@color/white" />
                </shape>
            </item>
            <item android:height="3dp" android:gravity="center_vertical">
                <shape>
                    <solid android:color="@color/white" />
                </shape>
            </item>

            <item android:height="3dp" android:bottom="5dp" android:gravity="bottom">
                <shape>
                    <solid android:color="@color/white" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>